{
    "openapi": "3.0.0",
    "info": {
        "title": "Mixo API",
        "description": "API for a Mixo, a cocktail web app for users to enjoy",
        "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/login":{
            "post": {
                "description": "Login for users to authenticate",
                "operationId": "login",
                "produces": [
                    "application/json",
                    "application/xml",
                    "text/xml",
                    "text/html"
                ],
                "parameters": [
                    {
                      "name": "username",
                      "in": "header",
                      "description": "Username from the user",
                      "required": true,
                      "type": "string"
                    },
                    {
                      "name": "password",
                      "in": "header",
                      "description": "Password for login in",
                      "required": true,
                      "type": "string"
                    }
                ],
                  "responses": {
                    "200": {
                      "description": "login successful",
                      "schema": {
                        "type": "json",
                        "items": {
                          "token": "ej0adfjklwefñlkasmñflasnlfkalvañlgmo"
                        }
                      }
                    },
                    "401": {
                      "description": "credentials doesn't match",
                      "schema": {
                        "type": "json",
                        "items": {
                          "msg": "Las credenciales no coinciden"
                        }
                      }
                  },
                    "404": {
                        "description": "user not found",
                        "schema": {
                          "type": "json",
                          "items": {
                            "msg": "Usuario no encontrado"
                          }
                        }
                    },
                    "default": {
                      "description": "unexpected error"
                    }
                }
            }
        },
        "/register":{
          "post": {
              "description": "Register for the user",
              "operationId": "register",
              "produces": [
                  "application/json",
                  "application/xml",
                  "text/xml",
                  "text/html"
              ],
              "parameters": [
                  {
                    "in": "body",
                    "name": "username",
                    "description": "Username from the user",
                    "required": true,
                    "type": "string"
                  },
                  {
                    "name": "password",
                    "in": "body",
                    "description": "Password for login in",
                    "required": true,
                    "type": "string"
                  },
                  {
                    "name": "email",
                    "in": "body",
                    "description": "User's email",
                    "required": true,
                    "type": "string"
                  }
              ],
                "responses": {
                  "200": {
                    "description": "register successful",
                    "schema": {
                      "type": "json",
                      "items": {
                        "msg": "Usuario registrado con éxito"
                      }
                    }
                  },
                  "403": {
                    "description": "User already exists",
                    "schema": {
                      "type": "json",
                      "items": {
                        "msg": "El usuario ya existe"
                      }
                    }
                },
                  "404": {
                      "description": "user not found",
                      "schema": {
                        "type": "json",
                        "items": {
                          "msg": "Usuario no encontrado"
                        }
                      }
                  },
                  "default": {
                    "description": "unexpected error"
                  }
              }
          }
      },
      "/cocktails":{
        "get":{
          "description": "List of cocktails",
          "operationId": "cocktails",
          "produces": [
              "application/json",
              "application/xml",
              "text/xml",
              "text/html"
          ],
          "parameters": [
            {
              "name": "limit",
              "in": "body",
              "description": "Limit of cocktails for pagination",
              "required": false,
              "type": "integer"
            },
            {
              "name": "after",
              "in": "body",
              "description": "Cursor of the next list of cocktails",
              "required": false,
              "type": "integer"
            },
            {
              "name": "before",
              "in": "body",
              "description": "Cursor of the previous list of cocktails",
              "required": false,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "List of cocktails",
              "schema": {
                "type": "json",
                "items": {
                  "data": [
                    { "name": "Vesper",
                      "glass": "martini",
                      "category": "Before Dinner Cocktail",
